<!DOCTYPE html>
<html>
<head>
     <meta charset="utf-8" />
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>SportsGym - Admin</title>
     @Styles.Render("~/Content/css")
     @Scripts.Render("~/bundles/modernizr")
     <!-- Bootstrap CSS -->
     <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
     <!-- Font Awesome -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
     <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
          <div class="container">
               <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "Admin" })">Admin</a>
               <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                       aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
               </button>
               <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto">
                         <li class="nav-item">
                              <a class="nav-link" href="@Url.Action("Index", "Users", new { area = "Admin" })">Users</a>
                         </li>
                         <li class="nav-item">
                              <a class="nav-link" href="@Url.Action("Index", "Gyms", new { area = "Admin" })">Gyms</a>
                         </li>
                         <li class="nav-item">
                              <a class="nav-link" href="@Url.Action("Index", "Products", new { area = "Admin" })">Products</a>
                         </li>
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                         <ul class="navbar-nav">
                              <li class="nav-item">
                                   <a class="nav-link" href="@Url.Action("Logout", "Home", new { area = "Admin" })">Logout</a>
                              </li>
                         </ul>
                    }
                    <img src="~/Content/img/brightness-and-contrast.png" id="dark-mode-toggle" class="ms-3" />
               </div>
          </div>
     </nav>
     <div class="container mt-4">
          @RenderBody()
     </div>
     <footer class="text-center py-3">
          <p class="m-0">&copy; @DateTime.Now.Year - TI-213</p>
     </footer>

     @Scripts.Render("~/bundles/jquery")
     @Scripts.Render("~/bundles/bootstrap/js")
     @Scripts.Render("~/bundles/jqueryval")
     <!-- Bootstrap JS -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
     @Scripts.Render("~/bundles/mainScript")
     @RenderSection("scripts", required: false)
</body>
</html>
