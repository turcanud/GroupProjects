@model List<GymSports.Data.Models.GymProduct>

@{
     ViewBag.Title = "Products";
     Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<!-- Popper.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<a href="@Url.Action("Create", "Products", new { area = "Admin" })" class="btn btn-primary bg-success mb-2">
     <i class="fas fa-plus"></i> Add Product
</a>
<div class="table-responsive">
     <table class="table table-striped table-hover">
          <thead class="table-dark">
               <tr>
                    <th><i class="fas fa-image"></i> Product Photo</th>
                    <th><i class="fas fa-hashtag"></i> ID</th>
                    <th><i class="fas fa-box"></i> Product Name</th>
                    <th><i class="fas fa-tag"></i> Product Category</th>
                    <th><i class="fas fa-dollar-sign"></i> Product Price</th>
                    <th><i class="fas fa-check-circle"></i> Product AvailabilityStatus</th>
                    <th><i class="fas fa-industry"></i> Product Brand</th>
                    <th><i class="fas fa-edit"></i> Edit</th>
                    <th><i class="fas fa-trash-alt"></i> Delete</th>
               </tr>
          </thead>
          <tbody>
               @foreach (var item in Model)
               {
                    <tr>
                         <td>
                              <img src="data:image;base64,@item.Photo" width="100px" alt="Product-IMG" />
                         </td>
                         <td>@item.ProductID</td>
                         <td>
                              <a href="@Url.Action("Details", "Products", new { area = "Admin", id = item.ProductID })" class="text-decoration-none">@item.Name</a>
                         </td>
                         <td>@item.Category</td>
                         <td>@item.Price</td>
                         <td>@item.AvailabilityStatus</td>
                         <td>@item.Brand</td>
                         <td><a href="@Url.Action("Edit", "Products", new { area = "Admin", id = item.ProductID })" class="text-decoration-none"><i class="fas fa-edit"></i> Edit</a></td>
                         <td><a href="@Url.Action("Delete", "Products", new { area = "Admin", id = item.ProductID })" class="text-decoration-none text-danger"><i class="fas fa-trash-alt"></i> Delete</a></td>
                    </tr>
               }
          </tbody>
     </table>
</div>
