@model List<GymSports.Data.Models.GymPlace>

@{
     ViewBag.Title = "Gyms";
     Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<a href="@Url.Action("Create", "Gyms", new { area = "Admin" })" class="btn btn-primary bg-success mb-2">
     <i class="fas fa-plus"></i> Add Gym
</a>
<div class="table-responsive">
     <table class="table table-striped table-hover">
          <thead class="table-dark">
               <tr>
                    <th><i class="fas fa-hashtag"></i> ID</th>
                    <th><i class="fas fa-building"></i> Gym Names</th>
                    <th><i class="fas fa-map-marker-alt"></i> Gym Region</th>
                    <th><i class="fas fa-address-card"></i> Gym Address</th>
                    <th><i class="fas fa-edit"></i> Edit</th>
                    <th><i class="fas fa-trash-alt"></i> Delete</th>
               </tr>
          </thead>
          <tbody>
               @foreach (var item in Model)
               {
                    <tr>
                         <td>@item.GymID</td>
                         <td>
                              <a href="@Url.Action("Details", "Gyms", new { id = item.GymID }, "Admin")" class="text-decoration-none">@item.Name</a>
                         </td>
                         <td>@item.Region</td>
                         <td>@item.Address</td>
                         <td><a href="@Url.Action("Edit", "Gyms", new { id = item.GymID }, "Admin")" class="text-decoration-none"><i class="fas fa-edit"></i> Edit</a></td>
                         <td><a href="@Url.Action("Delete", "Gyms", new { id = item.GymID }, "Admin")" class="text-decoration-none text-danger"><i class="fas fa-trash-alt"></i> Delete</a></td>
                    </tr>
               }
          </tbody>
     </table>
</div>
