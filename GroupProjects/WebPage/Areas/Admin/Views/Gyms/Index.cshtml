@model List<GymSports.Data.Models.GymPlace>

@{
     ViewBag.Title = "Gyms";
     Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}

<a href="@Url.Action("Create", "Gyms", new { area = "Admin" })" class="btn btn-primary bg-success mb-2">
     <i class="fas fa-plus"></i> Add
</a>
<div class="table-responsive">
     <table class="table table-striped table-hover">
          <thead class="table-dark">
               <tr>
                    <th><i class="fas"></i> Name</th>
                    <th><i class="fas fa-map-marker-alt"></i> Gym Region</th>
                    <th><i class="fas fa-calendar"></i> Date</th>
                    <th><i class="fas fa-clock"></i> Time</th>
                    <th><i class="fas fa-edit"></i> Edit</th>
                    <th><i class="fas fa-trash-alt"></i> Delete</th>
               </tr>
          </thead>
          <tbody>
               @foreach (var item in Model)
               {
                    <tr>
                         <td>
                              <a href="@Url.Action("Details", "Gyms", new { id = item.GymID, area = "Admin"})" class="text-decoration-none">@item.NameSurname</a>
                         </td>
                         <td>@item.Region</td>
                         <td>@item.Date.ToShortDateString()</td>
                         <td>@item.Time</td>
                         <td><a href="@Url.Action("Edit", "Gyms", new { id = item.GymID, area = "Admin"})" class="text-decoration-none"><i class="fas fa-edit"></i> Edit</a></td>
                         <td><a href="@Url.Action("Delete", "Gyms", new { id = item.GymID, area = "Admin"})" class="text-decoration-none text-danger"><i class="fas fa-trash-alt"></i> Delete</a></td>
                    </tr>
               }
          </tbody>
     </table>
</div>
