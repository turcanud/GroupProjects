@model GymSports.Data.Models.GymProduct

@{
     ViewBag.Title = "Details";
}

<h2 class="text-2xl font-bold mb-4">Details</h2>

<div class="bg-white rounded-lg shadow-md p-4">
     <h4 class="text-xl font-bold mb-2">@Model.Name</h4>
     <hr class="my-4" />
     <dl class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-x-4 gap-y-2">
          <div class="mb-2">
               <dt class="font-bold">Name:</dt>
               <dd>@Html.DisplayFor(model => model.Name)</dd>
          </div>
          <div class="mb-2">
               <dt class="font-bold">Category:</dt>
               <dd>@Html.DisplayFor(model => model.Category)</dd>
          </div>
          <div class="mb-2">
               <dt class="font-bold">Price:</dt>
               <dd>@Html.DisplayFor(model => model.Price)</dd>
          </div>
          <div class="mb-2">
               <dt class="font-bold">Availability:</dt>
               <dd>@Html.DisplayFor(model => model.AvailabilityStatus)</dd>
          </div>
          <div class="mb-2">
               <dt class="font-bold">Brand:</dt>
               <dd>@Html.DisplayFor(model => model.Brand)</dd>
          </div>
     </dl>
</div>
<p class="mt-4">
     @Html.ActionLink("Back to List", "Index", "Products", new { area = "" }, new { @class = "btn btn-secondary" })
</p>

