@model List<GymSports.Data.Models.GymProduct>

@{
     ViewBag.Title = "Products";
}

<a href="@Url.Action("Create", "Products", new {})" class="btn btn-primary bg-success mb-2">Add Product</a>
<div class="table-responsive">
     <table class="table table-striped table-hover">
          <thead class="table-dark">
               <tr>
                    <th>ID</th>
                    <th>Product Name</th>
                    <th>Product Category</th>
                    <th>Product Price</th>
                    <th>Product AvailabilityStatus</th>
                    <th>Product Brand</th>
                    <th>Edit</th>
                    <th>Delete</th>
               </tr>
          </thead>
          <tbody>
               @foreach (var item in Model)
               {
                    <tr>
                         <td>@item.ProductID</td>
                         <td>
                              <a href="@Url.Action("Details", "Products", new {id = item.ProductID})" class="text-decoration-none">@item.Name</a>
                         </td>
                         <td>@item.Category</td>
                         <td>@item.Price</td>
                         <td>@item.AvailabilityStatus</td>
                         <td>@item.Brand</td>
                         <td><a href="@Url.Action("Edit", "Products", new {id = item.ProductID})" class="text-decoration-none">Edit</a></td>
                         <td><a href="@Url.Action("Delete", "Products", new {id = item.ProductID})" class="text-decoration-none text-danger">Delete</a></td>
                    </tr>
               }
          </tbody>
     </table>
</div>
