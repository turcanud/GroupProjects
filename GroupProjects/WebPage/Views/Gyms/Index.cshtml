@model IEnumerable<GymSports.Data.Models.GymPlace>

@{
     ViewBag.Title = "Gyms";
}

<style>
     #main {
          background-color: rgba(0, 0, 0, 0.75);
          padding: 2rem;
          border-radius: 1rem;
          display: flex;
          flex-direction: column;
          align-items: center;
     }
</style>

@if (Model.Count() == 0)
{
     <a href="@Url.Action("Create", "Gyms", new { area = "" })" class="btn btn-primary bg-success mb-2">
          <i class="fas fa-plus"></i> Schedule
     </a>
}
     <div id="main" class="table-responsive">
          <table class="table table-striped table-hover">
               <thead class="table-dark">
                    <tr>
                         <th><i class="fas"></i> Name</th>
                         <th><i class="fas fa-map-marker-alt"></i> Gym Region</th>
                         <th><i class="fas fa-calendar"></i> Date</th>
                         <th><i class="fas fa-clock"></i> Time</th>
                         <th><i class="fas fa-trash-alt"></i> Delete</th>
                    </tr>
               </thead>
               <tbody>
                    @foreach (var gym in Model)
                    {
                         <tr>
                              <td>
                                   <a href="@Url.Action("Details", "Gyms", new { id = gym.GymID, area = ""})" class="text-decoration-none">@gym.NameSurname</a>
                              </td>
                              <td>@gym.Region</td>
                              <td>@gym.Date.ToShortDateString()</td>
                              <td>@gym.Time</td>
                              <td><a href="@Url.Action("Delete", "Gyms", new { id = gym.GymID, area = ""})" class="text-decoration-none text-danger"><i class="fas fa-trash-alt"></i> Delete</a></td>
                         </tr>
                    }
               </tbody>
          </table>
          <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2719.3087979571924!2d28.776492476302327!3d47.03417107114311!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40c97df09b103b55%3A0xdb8057ed1bbe1718!2sBig%20Sport%20Gym!5e0!3m2!1sro!2s!4v1685924864100!5m2!1sro!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
     </div>