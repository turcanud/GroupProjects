@model List<GymSports.Data.Models.GymPlace>

@{
     ViewBag.Title = "Gyms";
}

<div class="table-responsive">
     <table class="table table-striped table-hover">
          <thead class="table-dark">
               <tr>
                    <th><i class="fas fa-building"></i> Gym Names</th>
                    <th><i class="fas fa-map-marker-alt"></i> Gym Region</th>
                    <th><i class="fas fa-address-card"></i> Gym Address</th>
               </tr>
          </thead>
          <tbody>
               @foreach (var item in Model)
               {
                    <tr>
                         <td>
                              <a href="@Url.Action("Details", "Gyms", new { id = item.GymID }, "")" class="text-decoration-none">@item.Name</a>
                         </td>
                         <td>@item.Region</td>
                         <td>@item.Address</td>
                    </tr>
               }
          </tbody>
     </table>
</div>

